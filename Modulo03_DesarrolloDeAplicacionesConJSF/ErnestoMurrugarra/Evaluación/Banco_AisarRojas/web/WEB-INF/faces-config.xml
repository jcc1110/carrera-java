<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <!-- Reglas de navegación -->
    <navigation-rule>
        <from-view-id>*</from-view-id>
        
        <!-- Vistas del landing page -->
        <navigation-case>
            <from-action>views/principal</from-action>
            <to-view-id>views/principal.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>views/services</from-action>
            <to-view-id>views/services.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>views/contact</from-action>
            <to-view-id>views/contact.xhtml</to-view-id>
        </navigation-case>
        
        <!-- Vistas de la app -->
        <navigation-case>
            <from-action>views/authentication</from-action>
            <to-view-id>views/authentication.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>*</from-view-id>
        
        <navigation-case>
            <from-action>dashboard</from-action>
            <to-view-id>views/dashboard.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>views/person_data</from-action>
            <to-view-id>views/person_data.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>views/transfers</from-action>
            <to-view-id>views/transfers.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>views/operations</from-action>
            <to-view-id>views/operations.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>views/movements</from-action>
            <to-view-id>views/movements.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>views/cerrar_sesion</from-action>
            <to-view-id>views/cerrar_sesion.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>views/error</from-action>
            <to-view-id>views/error.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <!-- Navegación del login -->
    <navigation-rule>
        <from-view-id>/views/authentication.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>exito</from-outcome>
            <to-view-id>/views/dashboard.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>error</from-outcome>
            <to-view-id>/views/error.xhtml.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <!-- Navegación para los datos personales -->
    <navigation-rule>
        <from-view-id>/views/dashboard.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>registrado</from-outcome>
            <to-view-id>/views/person_data_r.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>noregistrado</from-outcome>
            <to-view-id>/views/person_data.xhtml.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>